DESCRIPTION="SMTP client library"
HOMEPAGE="http://www.stafford.uklinux.net/libesmtp/"
SRC_URI="http://www.stafford.uklinux.net/libesmtp/${P}.tar.bz2"

PKG_NAMES="${PN} ${PN}5 ${PN}-devel"
PKG_HINTS="setup lib devel"
PKG_CONTENTS[0]='usr/lib/esmtp-plugins/ usr/share/'
PKG_CONTENTS[1]='usr/bin/*.dll'
PKG_CONTENTS[2]="usr/bin/${PN}-config usr/include/ usr/lib/lib*"

CYGCONF_ARGS="--disable-static --enable-emulate-getaddrinfo 
	--enable-ntlm --with-openssl --enable-pthreads"
